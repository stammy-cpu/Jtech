{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.ts" },
    { "source": "/uploads/:path*", "destination": "/api/index.ts" },
    { "source": "/((?!api|uploads).*)", "destination": "/" }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  }
}
